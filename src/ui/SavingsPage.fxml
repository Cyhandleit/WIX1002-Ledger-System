<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.SavingsController">
   <children>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <BorderPane prefHeight="400.0" prefWidth="600.0">
               <top>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="This is Savings Page" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
               </top>
               <center>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <children>
                        <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" spacing="10">
                           <Text text="Enter the savings amount :">
                              <font>
                                 <Font size="20.0" />
                              </font>
                           </Text>
                           <TextField fx:id="SavingsTextField" alignment="CENTER_RIGHT" onAction="#setSavingsPercentage" prefHeight="26.0" prefWidth="500.0" promptText="The amount will deduct from the next debit" />
                           <Button fx:id="ConfirmButton" mnemonicParsing="false" onAction="#setSavingsPercentage" text="Confirm" />
                        </VBox>
                     </children>
                  </AnchorPane>
               </center>
            </BorderPane>
         </children>
      </HBox>
   </children>
</HBox>
