<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.RegisterController">
   <children>
      <Text layoutX="200.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Register Page" textAlignment="CENTER">
         <font>
            <Font size="40.0" />
         </font>
      </Text>
      <Text layoutX="100.0" layoutY="120.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Username:" />
      <TextField fx:id="usernameField" layoutX="200.0" layoutY="120.0" promptText="Enter Username" />
      <Text layoutX="100.0" layoutY="160.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Email:" />
      <TextField fx:id="emailField" layoutX="200.0" layoutY="160.0" promptText="Enter Email" />
      <Text layoutX="100.0" layoutY="200.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password:" />
      <PasswordField fx:id="passwordField" layoutX="200.0" layoutY="200.0" promptText="Enter Password" />
      <Label fx:id="statusLabel" layoutX="200.0" layoutY="240.0" textFill="RED" />
      <Button layoutX="100.0" layoutY="280.0" mnemonicParsing="false" onAction="#switchToCoverPage" text="Back" />
      <Button fx:id="RegisterButton" layoutX="300.0" layoutY="280.0" mnemonicParsing="false" onAction="#registerUser" text="Register" />
   </children>
</AnchorPane>
