<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.CreditLoanController">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <Text layoutX="50.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Apply for Loan">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
            <TextField fx:id="principalAmountField" layoutX="50.0" layoutY="90.0" promptText="Principal Amount" />
            <TextField fx:id="interestRateField" layoutX="50.0" layoutY="130.0" promptText="Interest Rate (%)" />
            <TextField fx:id="repaymentPeriodField" layoutX="50.0" layoutY="170.0" promptText="Repayment Period (months)" />
            <Button fx:id="applyButton" layoutX="50.0" layoutY="210.0" mnemonicParsing="false" onAction="#applyLoan" text="Apply" />
            <Text layoutX="300.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Repay Loan">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
            <TextField fx:id="repayAmountField" layoutX="300.0" layoutY="90.0" promptText="Repayment Amount" />
            <Button fx:id="repayButton" layoutX="300.0" layoutY="130.0" mnemonicParsing="false" onAction="#repayLoan" text="Repay" />
            <Label fx:id="statusLabel" layoutX="50.0" layoutY="250.0" textFill="RED" />
            <Button layoutX="300.0" layoutY="170.0" mnemonicParsing="false" onAction="#openLoanRepayments" text="View Loan Repayments" />
         </children>
      </AnchorPane>
   </children>
</HBox>
